{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Format Leaf C++ files",
      "type": "shell",
      "windows": {
        "command": "powershell.exe",
        "args": [
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "${workspaceFolder}/src/scripts/format_all_files.ps1"
        ],
        "options": {
          "shell": {
            "executable": "powershell.exe"
          }
        }
      },
      "osx": {
        "command": "${workspaceFolder}/src/scripts/format_all_files.sh"
      },
      "linux": {
        "command": "${workspaceFolder}/src/scripts/format_all_files.sh"
      },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "Decode ESP32 Backtrace",
      "type": "shell",
      "windows": {
        "command": "powershell.exe",
        "args": [
          "-ExecutionPolicy",
          "Bypass",
          "-File",
          "${workspaceFolder}/src/scripts/decode_backtrace.ps1"
        ]
      },
      "osx": {
        "command": "${workspaceFolder}/src/scripts/decode_backtrace.sh"
      },
      "linux": {
        "command": "${workspaceFolder}/src/scripts/decode_backtrace.sh"
      },
      "options": {
        "env": {
          "PIOENV": "${command:platformio-ide.activeEnvironment}"
        }
      },
      "problemMatcher": []
    }
  ]
}